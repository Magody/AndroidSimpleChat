<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="10sp"
    android:layout_margin="3dp"

    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewLayoutFotoPerfil"
            android:layout_width="40dp"
            android:layout_gravity="start"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textViewLayoutNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danny"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_weight="1"

                    />

                <TextView
                    android:paddingEnd="4dp"
                    android:id="@+id/textViewLayoutHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00 12/23"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/textViewLayoutMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensaje"
                />

            <ImageView
                android:id="@+id/imageViewFotoMensaje"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:layout_gravity="start"
                android:src="@mipmap/ic_launcher"
                android:visibility="visible"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>